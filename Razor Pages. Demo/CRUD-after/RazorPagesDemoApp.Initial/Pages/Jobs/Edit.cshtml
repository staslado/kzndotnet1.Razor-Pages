@page "{id}"
@using DAL.Models;
@model RazorPagesDemoApp.CRUD.Pages.Jobs.EditModel

@{
    ViewData["Title"] = "Edit Job";
}

<h2>@ViewData["Title"]</h2>
<hr />
<div class="row">
    <div class="col-md-4">
        <form method="post">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Job.Id" />
            <div class="form-group">
                <label asp-for="Job.Title" class="control-label"></label>
                <input asp-for="Job.Title" class="form-control" />
                <span asp-validation-for="Job.Title" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Description" class="control-label"></label>
                <textarea asp-for="Job.Description" class="form-control"></textarea>
                <span asp-validation-for="Job.Description" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Job.Priority" class="control-label"></label>
                <select asp-for="Job.Priority" asp-items="@Html.GetEnumSelectList<Priority>()" class="form-control"></select>
                <span asp-validation-for="Job.Priority" class="text-danger"></span>
            </div>
            <div class="form-group">
                <div class="checkbox">
                    <label>
                        <input asp-for="Job.IsActive" /> @Html.DisplayNameFor(model => model.Job.IsActive)
                    </label>
                </div>
            </div>
            <div class="form-group">
                <label asp-for="Job.Assignee" class="control-label"></label>
                <input asp-for="Job.Assignee" class="form-control" />
                <span asp-validation-for="Job.Assignee" class="text-danger"></span>
            </div>
            <div class="form-group">
                <button class="btn btn-default">Save</button> | 
                <button asp-page-handler="AssigneeToAdmin" class="btn btn-default">Assignee To Administrator</button>
            </div>
        </form>
    </div>
</div>

<form asp-page-handler="AssigneeToAdmin" method="post">
    <button class="btn btn-default">Assignee To Administrator By Form</button>
</form>

<div>
    <a asp-page="./Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
